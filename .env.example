# =============================================================================
# Mnemosyne Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider API Keys (choose one or more)
# -----------------------------------------------------------------------------

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI (Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# Ollama (no API key needed, just the base URL)
OLLAMA_BASE_URL=http://localhost:11434

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment: development, staging, production
MNEMOSYNE_ENV=development

# Log level: DEBUG, INFO, WARNING, ERROR
MNEMOSYNE_LOG_LEVEL=INFO

# Data directory (default: ~/.mnemosyne)
# MNEMOSYNE_DATA_DIR=/path/to/data

# -----------------------------------------------------------------------------
# Web Interface Settings
# -----------------------------------------------------------------------------

# Host and port for web server
MNEMOSYNE_HOST=0.0.0.0
MNEMOSYNE_PORT=8000

# Secret key for session encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
MNEMOSYNE_SECRET_KEY=your-secret-key-here-generate-a-random-one

# CORS origins (comma-separated)
MNEMOSYNE_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Database Settings (optional - for external DB)
# -----------------------------------------------------------------------------

# ChromaDB (vector store)
# CHROMA_HOST=localhost
# CHROMA_PORT=8001

# PostgreSQL (for production - not yet implemented)
# DATABASE_URL=postgresql://user:password@localhost:5432/mnemosyne

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable experimental features
MNEMOSYNE_EXPERIMENTAL=false

# Enable telemetry (anonymous usage data)
MNEMOSYNE_TELEMETRY=false
