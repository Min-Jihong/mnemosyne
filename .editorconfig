# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Docker
[Dockerfile]
indent_size = 4

# HTML/CSS/JS
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# Config files
[.{gitignore,dockerignore,env*}]
indent_size = 4
